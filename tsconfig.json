{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2016", "DOM"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@teamkeel/sdk": ["./.build/sdk"],
      "@teamkeel/testing": ["./.build/testing"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2016",
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
